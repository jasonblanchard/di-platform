  definitions:
    io.k8s.cli.setters.replicas:
      x-k8s-cli:
        setter:
          name: replicas
          value: "1"
          setBy: package-default
    io.k8s.cli.setters.tag:
      x-k8s-cli:
        setter:
          name: tag
          value: "latest"
          setBy: package-default
    io.k8s.cli.substitutions.image:
      x-k8s-cli:
        substitution:
          name: image
          pattern: jasonblanchard/di-public-web:TAG_SETTER
